<form>
	<div class="form-group">
		<label>Title</label>
		{{input type="text" class="form-control" value=model.title placeholder="Add Movie..."}}
	</div>
	<div class="form-group">
		<label>Rating</label>
		{{input type="text" class="form-control" value=model.rating placeholder="Rate 1-100..."}}
	</div>
	<div class="form-group">
		<label>Description</label>
		{{textarea class="form-control" value=model.description placeholder="Comments..."}}
	</div>
	<button {{action 'editMovie' model.id}} class="btn btn-primary">Submit</button>
</form>
