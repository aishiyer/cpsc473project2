<form>
	<div class="form-group">
		<label>Title</label>
		{{input type="text" class="form-control" value=title placeholder="Add Movie Title..."}}
	</div>
	<div class="form-group">
		<label>Rating</label>
		{{input type="text" class="form-control" value=rating placeholder="Rate 1-100..."}}
	</div>
	<div class="form-group">
		<label>Description</label>
		{{textarea class="form-control" value=description placeholder="Comments..."}}
	</div>
	<button {{action 'addMovie'}} class="btn btn-primary">Submit</button>
</form>
