<h1>Pictures Page</h1>
<p> Can i put more stuff here?</p>

<!-- create-thing/template.hbs -->

<div class="col-md-6 col-md-offset-3">
  {{outlet}}
  <section>
    <h2>Picture List</h2>
    {{#each model as |picture|}}
    <p>
      <span><strong>{{picture.title}}</strong> - <em>{{picture.description}}</em></span>
      <button class="btn btn-danger" {{action "deleteBook" picture}}>Delete</button>
    </p>
    {{/each}}
  </section>
</div>


<div class="jumbotron text-center">
  {{#link-to 'pictures'}}<button class="btn btn-primary">All Pictures</button>{{/link-to}}
  {{#link-to 'pictures.new'}}<button class="btn btn-primary">Add new pictures</button>{{/link-to}}
</div>
