<!-- Info when sign-in -->
<div class="jumbotron">
  <div class="container">
    <h1>Welcome!</h1>


    <div class='page-header'>
      <h1>You must be signed in to use this app</h1>
    </div>
    <div class='list-group'>
      {{#link-to 'sign-up' class='list-group-item'}}
        Sign Up
        {{/link-to}}
      {{#link-to 'sign-in' class='list-group-item'}}
        Sign In
        {{/link-to}}
      </div>

      {{#if session.isAuthenticated}}
        Logged in as {{session.currentUser.displayName}}
        <button {{action "signOut"}}>Sign out</button>
        {{outlet}}
      {{else}}
        <button {{action "signIn" "twitter"}}>Sign in with Twitter</button>
      {{/if}}
      
  </div>
</div>

